@inject IViewLocalizer Localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    ViewData["Title"] = Localizer["Home Page"];
}
@model StaffListViewModel
<!--#region About-->
<!--ABOUT-->
<section id="About" class="about_section unselectable">

    <div class="container">
        <div class="about_main">
            <div class="about_log">
                <img src="~/img/icaa_logo.png" alt="ICAA_Logo">
            </div>
            <div class="about_title ">
                @Localizer["<h2>INTERNATIONAL<br>COMBAT<br>AIKIDO<br>ASSOCIATION</h2>"]
            </div>
        </div>
        <div class="about_main">
            <div class="about_title_sd">
                @Localizer["<h2>WORLD<br>USMANOV`S<br>COMBAT SYSTEMS<br>ASSOCIATION</h2>"]
            </div>
            <div class="about_log_sd">
                <img src="~/img/wucsa_logo.png" alt="WUCSA_Logo">
            </div>
        </div>
        <div class="about_btn mt-5">
            <a asp-area="" asp-controller="About" asp-action="Index" class="aBtn aBtn-1 text-center ease_x">
                <svg>
                    <rect x="0" y="0" fill="none" width="100%" height="100%" />
                </svg>
                @Localizer["Read More"]
            </a>
        </div>
    </div>
</section>
<!--#endregion About-->
<!--#region Staffs-->
<section id="Staff" class="staff_section unselectable">
    @*<div class="">*@
    <div class="staff_title text-center">
        <h3>
            @Localizer["Staff"]
        </h3>
    </div>
    <div class="mt-4 pb-5">
        <div class="blog-slider pb-sm-2">
            <div class="blog-slider__wrp swiper-wrapper">

                @if (@requestCulture.RequestCulture.UICulture.Name == "ru")
                {
                    @foreach (var p in Model.Staffs)
                    {
                        <div class="blog-slider__item swiper-slide">
                            <div class="blog-slider__img">
                                <img src="@Url.Content(p.ImageUrl)" alt="@p.NameRu @p.SurnameRu">
                            </div>
                            <div class="blog-slider__content">
                                <div class="blog-slider__title">@p.NameRu<br>@p.SurnameRu</div>
                                <div class="blog-slider__text">@p.DescriptionRu</div>
                                <a asp-controller="Staff" asp-action="Index" asp-route-id="@p.StaffID" class="blog-slider__button">
                                    @Localizer["Read More"]
                                </a>
                            </div>
                        </div>
                    }
                }
                else if (@requestCulture.RequestCulture.UICulture.Name == "uz")
                {
                    @foreach (var p in Model.Staffs)
                    {
                        <div class="blog-slider__item swiper-slide">
                            <div class="blog-slider__img">
                                <img src="@Url.Content(p.ImageUrl)" alt="@p.NameUz @p.SurnameUz">
                            </div>
                            <div class="blog-slider__content">
                                <div class="blog-slider__title">@p.NameUz<br>@p.SurnameUz</div>
                                <div class="blog-slider__text">@p.DescriptionUz</div>
                                <a asp-controller="Staff" asp-action="Index" asp-route-id="@p.StaffID" class="blog-slider__button">
                                    @Localizer["Read More"]
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    @foreach (var p in Model.Staffs)
                    {
                        <div class="blog-slider__item swiper-slide">
                            <div class="blog-slider__img">
                                <img src="@Url.Content(p.ImageUrl)" alt="@p.Name @p.Surname">
                            </div>
                            <div class="blog-slider__content">
                                <div class="blog-slider__title">@p.Name<br>@p.Surname</div>
                                <div class="blog-slider__text">@p.Description</div>
                                <a asp-controller="Staff" asp-action="Index" asp-route-id="@p.StaffID" class="blog-slider__button">
                                    @Localizer["Read More"]
                                </a>
                            </div>
                        </div>
                    }
                }

            </div>
            <div class="blog-slider__pagination"></div>
        </div>
    </div>
    @*</div>*@
</section>
<!--#endregion -->
<!--#region Gallery-->
<!--GALLERY-->
<section id="Gallery" class="gallery_section unselectable">
    <div class="sub">
        <div class="container">
            <div class="gallery_title text-center">
                <h3>
                    @Localizer["Gallery"]
                </h3>
            </div>
            <div class="pt-4">
                <div class="fotorama col-sm-12 col-md-11 col-lg-10 m-auto" data-maxheight="400" data-allowfullscreen="native" data-loop="true">
                    @foreach (var img in Model.Galleries)
                    {
                        <img src="@Url.Content(img.ImagePath)" data-caption="@Url.Content(img.Info)">
                    }
                </div>
            </div>


        </div>

        <div class="about_btn pt-3">
            <a asp-area="" asp-controller="Gallery" asp-action="Index" class="aBtn aBtn-1 text-center ease_x">
                <svg>
                    <rect x="0" y="0" fill="none" width="100%" height="100%" />
                </svg>
                @Localizer["See More"]
            </a>
        </div>
    </div>
</section>
<!--#endregion Gallery-->
