                <a class="lBtn text-center box-shadow-outset" asp-controller="News" asp-action="News" asp-route-id="@Model.BlogID">@Localizer["Read More"]</a>
            </div>
            @*<form asp-action="Blog" asp-controller="Blog" method="post">
                    <input asp-for="@Model.BlogID" type="hidden" name="xBlogId" value="@Model.BlogID" />
                    <input asp-for="@Model.Title" type="hidden" name="bName" value="@Model.Title" />
                    <button class="a_s_btn myBTN" type="submit">@Localizer["Read More"]</button>
                </form>*@
        </div>
    </div>
